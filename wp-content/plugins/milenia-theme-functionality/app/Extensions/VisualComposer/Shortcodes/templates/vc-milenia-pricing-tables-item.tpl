<!-- - - - - - - - - - - - - - Pricing Table - - - - - - - - - - - - - - - - -->
<div class="apo-grid-col">
    <section class="apo-pricing-table ${pricing_table_is_featured}">
        <header class="apo-pricing-table-header">
            ${pricing_table_icon}
            <h2 class="apo-pricing-table-title">${pricing_table_title}</h2>
            <strong class="apo-pricing-table-price">${pricing_table_price}</strong>
            <em class="apo-pricing-table-period">${pricing_table_period}</em>
            ${pricing_table_label}
        </header>

        <div class="apo-pricing-table-body">
            <ul class="apo-pricing-table-list">
                ${pricing_table_options}
            </ul>
            ${pricing_table_description}
        </div>

        <footer class="apo-pricing-table-footer">
            <a href="${pricing_table_link_url}" title="${pricing_table_link_title}" target="${pricing_table_link_target}" rel="${pricing_table_link_rel}" class="apo-btn">${pricing_table_link_text}</a>
        </footer>
    </section>
</div>
<!-- - - - - - - - - - - - - - End of Pricing Table - - - - - - - - - - - - - - - - -->
